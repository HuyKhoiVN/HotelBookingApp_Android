<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền của EditText -->
    <solid android:color="#E3F2FD" />

    <!-- Đường viền cho EditText -->
    <stroke
        android:width="1dp"
        android:color="#90CAF9" />

    <!-- Bo góc cho EditText -->
    <corners android:radius="8dp" />

    <!-- Padding bên trong EditText -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
