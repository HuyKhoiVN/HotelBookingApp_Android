<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền của thẻ (xanh dương nhạt) -->
    <solid android:color="#E3F2FD"/>

    <!-- Đường viền cho thẻ -->
    <stroke
        android:width="1dp"
        android:color="#90CAF9"/>

    <!-- Bo góc cho thẻ -->
    <corners android:radius="12dp"/>

    <!-- Đổ bóng cho thẻ (tùy chọn) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
