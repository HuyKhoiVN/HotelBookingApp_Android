<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="8"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txBookingCreatedDate"
            android:text="20/10/2024"
            android:textSize="12sp"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvReviewComment"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="Đánh giá"
            android:textColor="#112FC7"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgViewCancelRoom"
            android:layout_gravity="right"
            android:layout_width="20dp"
            android:src="@drawable/icon_delete_booking"
            android:layout_height="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <!-- Ảnh phòng -->
        <ImageView
            android:id="@+id/imgRoom"
            android:layout_width="120dp"
            android:src="@drawable/vungtau"
            android:layout_height="100dp"
            android:contentDescription="Room Image"
            android:layout_gravity="center_vertical" />

        <!-- Thông tin phòng -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvRoomName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Room Name"
                    android:textStyle="bold"
                    android:layout_weight="4"
                    android:textSize="16sp"
                    android:textColor="#0D47A1" />
                <!-- Đánh giá sao -->
                <TextView
                    android:id="@+id/tvRoomRating"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="4.5 ★"
                    android:textColor="#FFD700"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvRoomType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room Type"
                android:textSize="14sp"
                android:textColor="#616161" />

            <!-- Check-in and Check-out Dates -->
            <TextView
                android:id="@+id/tvDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/12/2024 - 15/12/2024"
                android:textSize="14sp"
                android:textColor="#555"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvRoomPrice"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Total Price"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#D32F2F" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Confirmed"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
