<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity"
    android:orientation="vertical"
    android:padding="0dp">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E3F2FD"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Logo hoặc tên ứng dụng -->
            <TextView
                android:id="@+id/tv_app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOOKPHONG.VN"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#0D47A1"
                android:layout_marginBottom="24dp" />

            <!-- Tiêu đề Đăng nhập -->
            <TextView
                android:id="@+id/tv_login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ĐĂNG NHẬP"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Input Số điện thoại, tên người dùng hoặc email -->
            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số điện thoại, tên người dùng, email"
                android:inputType="text"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Input Mật khẩu -->
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Nút Đăng nhập -->
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng Nhập"
                android:backgroundTint="#00796B"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Quên mật khẩu -->
            <TextView
                android:id="@+id/tv_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quên mật khẩu"
                android:textSize="14sp"
                android:textColor="#00796B"
                android:layout_marginBottom="24dp" />

            <!-- Dòng chữ tiếp tục đăng nhập bằng -->
            <TextView
                android:id="@+id/tv_continue_with"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiếp tục đăng nhập bằng"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Các nút đăng nhập Facebook và Google -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/btn_facebook_login"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_facebook"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Facebook login button" />

                <ImageView
                    android:id="@+id/btn_google_login"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="#fff"
                    android:src="@drawable/ic_google_logo"
                    android:contentDescription="Google login button" />
            </LinearLayout>

            <!-- Dòng chữ HOẶC -->
            <TextView
                android:id="@+id/tv_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOẶC"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Đăng ký -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_no_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tôi chưa có tài khoản"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng ký"
                    android:backgroundTint="#00796B"
                    android:textColor="#FFFFFF"
                    android:padding="12dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

